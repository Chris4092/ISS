<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="domain.Client"
       table="Clients">
    <id name="id" type="long" column="idClient">
            <generator class="increment"/>
    </id>
    <property
            name="username" type="string" column="username"
    />
    <property
            name="password" type="string" column="password"
    />
    <property
            name="fName" type="string" column="fname"
    />
    <property
            name="lName" type="string" column="lname"
    />
    <property
            name="points" type="int" column="points"
    />
        </class>
</hibernate-mapping>